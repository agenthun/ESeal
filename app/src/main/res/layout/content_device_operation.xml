<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:paddingBottom="@dimen/spacing_normal"
    android:paddingLeft="@dimen/spacing_normal"
    android:paddingRight="@dimen/spacing_normal"
    android:paddingTop="@dimen/spacing_normal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_device_operation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_seting"
            style="@style/CradView.Light.App"
            android:layout_width="match_parent"
            android:layout_height="242dp"
            app:cardBackgroundColor="@color/serenity_mask">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/card_setting" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/spacing_double"
                android:text="@string/card_title_setting"
                android:textAppearance="@style/TextAppearance.Title" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_lock"
                style="@style/CradView.Light.App"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/amber_a100_mask">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="48dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/card_lock" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="@dimen/spacing_double"
                    android:text="@string/card_title_lock"
                    android:textAppearance="@style/TextAppearance.Title" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_unlock"
                style="@style/CradView.Light.App"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/green_mask">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="48dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/card_unlock" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="@dimen/spacing_double"
                    android:text="@string/card_title_unlock"
                    android:textAppearance="@style/TextAppearance.Title" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_query"
            style="@style/CradView.Light.App"
            android:layout_width="match_parent"
            android:layout_height="242dp"
            app:cardBackgroundColor="@color/rose_quartz_mask">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/card_query" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/spacing_double"
                android:text="@string/card_title_query"
                android:textAppearance="@style/TextAppearance.Title" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>